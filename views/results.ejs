<%- include("partials/header") -%>

<body class="text-center">
  <main class="form-signin container my-5">
    <section class="bank-details">
      <div class="result-card">
        <div class="result-header">
          <img src="/2910254.png" alt="Bank Icon" class="bank-icon mb-3" />
          <h2 class="result-title">Branch Details</h2>
        </div>

        <% if (responseCode != 404) { %>
        <div class="result-content">
          <div class="result-item">
            <span class="result-label">Bank Name</span>
            <span class="result-value text-break"><%= webBankName %></span>
          </div>
          <div class="result-item">
            <span class="result-label">Address</span>
            <span class="result-value text-break"><%= webBankAddress %></span>
          </div>
          <div class="result-item">
            <span class="result-label">City</span>
            <span class="result-value text-break"><%= webBankCity %></span>
          </div>
          <div class="result-item">
            <span class="result-label">State</span>
            <span class="result-value text-break"><%= webBankState %></span>
          </div>
        </div>
        <% } else { %>
        <div class="error-message">
          <i class="fas fa-exclamation-circle"></i>
          <p>Wrong IFSC Code Entered!</p>
        </div>
        <% } %>
      </div>

      <div class="mt-4">
        <a href="/" class="back-button">
          <i class="fas fa-chevron-left"></i> Check Another
        </a>
      </div>

      <footer class="mt-5">
        <div class="footer-links">
          <a href="https://bit.ly/jashgro" class="footer-link">
            &copy; JashGro
          </a>
          <a
            href="https://github.com/BlackHatDevX/ifsc-checker"
            class="footer-link"
          >
            <i class="fab fa-github"></i> Source Code
          </a>
        </div>
      </footer>
    </section>
  </main>
</body>

<%- include("partials/footer") -%>
