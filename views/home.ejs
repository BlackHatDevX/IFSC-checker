<%- include("partials/header") -%>
<body class="text-center">
  <main class="form-signin w-100 m-auto">
    <div class="card shadow-lg border-0">
      <div class="card-body p-5">
        <div class="welcome-banner mb-4">
          <div class="icon-wrapper mb-3">
            <img
              src="2910254.png"
              alt="Bank Icon"
              class="img-fluid"
              style="max-height: 80px"
            />
          </div>
          <h1 class="h4 text-primary mb-3">IFSC Code Validator</h1>
          <p class="text-muted">
            Effortlessly validate IFSC codes for Indian banks
          </p>
        </div>

        <form action="/" method="post" class="mt-4">
          <div class="form-floating mb-4">
            <input
              type="text"
              class="form-control form-control-lg border-0"
              maxlength="11"
              name="ifsc"
              id="floatingInput"
              placeholder="Enter IFSC Code"
              required
              autocomplete="off"
              style="border-radius: 12px"
            />
            <label for="floatingInput" class="text-muted"
              >Enter IFSC Code</label
            >
          </div>

          <button
            class="btn btn-primary btn-lg w-100 mb-3"
            type="submit"
            style="border-radius: 12px"
          >
            <i class="fa-brands fa-searchengin"></i> Validate IFSC
          </button>
        </form>
      </div>
    </div>

    <footer class="mt-4">
      <div class="d-flex justify-content-center align-items-center gap-3">
        <a
          href="https://bit.ly/jashgro"
          class="text-decoration-none text-muted"
        >
          <small>&copy; JashGro</small>
        </a>
        <span class="text-muted">|</span>
        <a
          href="https://github.com/BlackHatDevX/ifsc-checker"
          class="text-decoration-none text-muted d-flex align-items-center gap-2"
        >
          <small>Source Code</small>
          <i class="fab fa-github"></i>
        </a>
      </div>
    </footer>
  </main>
</body>
<%- include("partials/footer") -%>
